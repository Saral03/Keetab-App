<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@drawable/background_profile"
    android:id="@+id/line"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@mipmap/ic_launcher_round">

    </ImageView>
    <TextView
        android:id="@+id/profile_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18sp"
        android:layout_marginTop="-210dp"
        android:text="PROFILE"
        android:textSize="15sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:background="@drawable/round_corners">

        <TextView
            android:id="@+id/name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle"
            android:hint="Your name will appear here"
            android:padding="15dp"
            android:textColorHint="@color/white"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/email_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_profile"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle"
            android:hint="Your email will appear here"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColorHint="@color/white"
            android:textSize="20dp">

        </TextView>
    <TextView
        android:id="@+id/phone_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_profile"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangle"
        android:hint="Your mobile will appear here"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:padding="15dp">

    </TextView>

        <TextView
            android:id="@+id/address_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_profile"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle"
            android:hint="Your address will appear here"
            android:padding="15dp"
            android:textColorHint="@color/white"
            android:textSize="20dp">

        </TextView>
    </RelativeLayout>
</LinearLayout>