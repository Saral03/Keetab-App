<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/img_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3BC8C7C7"
        android:padding="4dp">

        <ImageView
            android:id="@+id/img_fav"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:src="@drawable/default_book_cover">

        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_cover"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:weightSum="8">

        <TextView
            android:id="@+id/bookname_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Hello World"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/bookauthor_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="12dp"
            android:text="Android Inc."
            android:textColor="#6D6C6C"
            android:textSize="19sp">

        </TextView>

        <TextView
            android:id="@+id/bookprice_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="12dp"
            android:text="Rs. 499"
            android:textColor="#4AA54A"
            android:textSize="19sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/rating_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_baseline_star_24"
            android:drawablePadding="5dp"
            android:padding="12dp"
            android:text="4.5"
            android:textColor="#F8D717"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>


    </LinearLayout>

</RelativeLayout>
</androidx.cardview.widget.CardView>